# ============================================================================
# FPLANNER BACKEND ENVIRONMENT VARIABLES
# ============================================================================

# AWS S3 Cache Persistence (Optional - for production on ephemeral platforms)
# If enabled, cache will be persisted to S3 instead of only local disk
AWS_S3_ENABLED=true
AWS_S3_BUCKET=fplanner-cache
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Gemini AI API (Required for AI insights feature)
GEMINI_API_KEY=your-gemini-api-key

# CORS Configuration (Optional - for custom domains)
# ALLOWED_ORIGIN=https://your-custom-domain.com

# Server Port (Optional - defaults to 3001, Render sets automatically)
# PORT=3001
